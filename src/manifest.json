{
  "manifest_version": 2,
  "name": "pocket",
  "description": "This extension allows you to connect to your Pocket account, bookmark and view a list of all your bookmarks.",
  "version": "1.11.2",
  "icons": {
    "128": "img/appIcon.png"
  },
  "background": {
    "scripts": [
      "js/main.js"
    ]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "https://getpocket.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "html/bookmarksList.html"
  },
  "web_accessible_resources": [
    "img/*",
    "notification.html",
    "auth.html"
  ]
}