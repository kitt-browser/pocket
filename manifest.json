{
  "manifest_version": 2,

  "name": "pocket",
  "description": "This extension allows you to connect to your Pocket account, bookmark and view a list of all your bookmarks.",
  "version": "1.10",
  "icons": { "128": "img/appIcon.png" },
  "background": {
    "scripts": [
      "vendor/jquery/jquery.js",
      "vendor/q/q.js",
      "vendor/underscore/underscore.js",
      "vendor/momentjs/moment.js",
      "vendor/minilog/minilog.js",
      "js/common.js",
      "js/oauth.js",
      "js/main.js"
    ]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "https://getpocket.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "bookmarksList.html"
  },
  "content_scripts": [
    {
    }
  ],
  "web_accessible_resources": [
    "img/*",
    "notification.html",
    "auth.html"
  ]
}
